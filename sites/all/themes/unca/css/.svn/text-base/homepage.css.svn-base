/* slideshow
-------------------------------------------------------------------------------------------- */
#slideshow {
width:710px;
position:relative;
margin-bottom:20px;
}

#slideshow #slidesContainer {
margin:0 auto;
width:710px;
height:400px;
overflow:auto; /* allow scrollbar */
position:relative;
}

#slideshow #slidesContainer .slide {
margin:0 auto;
position:relative;
width:690px; /* reduce by 20 pixels to avoid horizontal scroll */
height:400px;
}

#slideshow .control {
display:block;
width:50px;
height:50px;
text-indent:-10000px;
position:relative;
cursor: pointer;
margin-top:-220px; 
border-top:solid #fff 1px;
border-bottom:solid #fff 1px;
}

#slideshow #leftControl {
float:left;
background:transparent url(../imgs/slideshow-arrow-left-default.png) no-repeat 0 0;
border-right:solid #fff 1px;
}

#slideshow #leftControl:hover {
background:transparent url(../imgs/slideshow-arrow-left-hover.png) no-repeat 0 0;
}

#slideshow #rightControl {
float:right;
background:transparent url(../imgs/slideshow-arrow-right-default.png) no-repeat 0 0;
border-left:solid #fff 1px;
}

#slideshow #rightControl:hover {
background:transparent url(../imgs/slideshow-arrow-right-hover.png) no-repeat 0 0;
}

#slideshow .caption {
padding:20px; 
position:absolute; 
bottom:-20px; 
color:#fff; 
background:url(../imgs/background-grey-transparent.png) repeat transparent; 
width:670px; /* .slide width - .caption padding */
clear:both;
font-size:14px;
}

#slideshow .caption a {
color:#EF851A;
}