/* footer */
#bottom-spiffs ul {
margin-bottom:-5px;
}

#bottom-spiffs .column {
float:left;
padding:0px;
}

#bottom-spiffs .first,
#bottom-spiffs .last {
width:240px;
font-size:14px;
}

#bottom-spiffs .interior {
width:428px;
margin:0 5px;
background: url(../imgs/footer-spiff-background-profile.png) #95b36f repeat-x;
border:solid #fff 1px;
padding:20px;
height:136px;
overflow:hidden;
}

.footer-spiff-apply,
.ooter-spiff-tour {
overflow:hidden;
}

#footer-profile {
overflow:hidden
}

.footer-spiff-question,
.footer-spiff-facebook,
.footer-spiff-mailinglist {
overflow:hidden;
}

#bottom-spiffs #profile-headshot {
float:right;
padding:1px;
border:solid #fff 1px;
margin-left:20px;
}

#bottom-spiffs #profile-name {
font-size:24px;
margin-bottom:5px;
margin-top:5px;
}

#bottom-spiffs #profile-major {
margin-bottom:5px;
}

#bottom-spiffs #profile-abstract {
margin-bottom:5px;
font-size:11px;
}

#bottom-spiffs li {
margin-bottom:5px;
}

#bottom-spiffs p {
margin-bottom:0px;
}
#bottom-spiffs .content {
margin-bottom:5px;
}

#bottom-spiffs .column.first div.content {
background:url(../imgs/footer-spiff-background-tall.png) repeat-x #32611c;
}

#bottom-spiffs .column.last div.content {
background:url(../imgs/footer-spiff-background-short.png) repeat-x #32611c;
}

#bottom-spiffs .first a {
display:block;
padding:33px 20px 33px 75px;
color:#fff;
border:solid #fff 1px;
}

.footer-spiff-apply {
background:url(../imgs/spiff-icon-checkmark.png) 20px 24px no-repeat;
font-size:24px;
}

.footer-spiff-tour {
background:url(../imgs/spiff-icon-eye.png) 20px 24px no-repeat;
}

.footer-spiff-question{
background:url(../imgs/spiff-icon-question.png) 5px 9px no-repeat;
}

.footer-spiff-facebook{
background:url(../imgs/spiff-icon-facebook.png) 5px 9px no-repeat;
}

.footer-spiff-mailinglist{
background:url(../imgs/spiff-icon-mail.png) 5px 9px no-repeat;
}

#bottom-spiffs .last a {
display:block;
padding:18px 20px 18px 45px;
color:#fff;
border:solid #fff 1px;
}
